class Solution {
public:
    int binarySearch(vector<int>arr,int l,int r){
        while(l<r){
            int mid=(l+r)/2;
            if(arr[mid]>=0)
                l=mid+1;
            else
                r=mid;
        }
        return l;
    }
    int countNegatives(vector<vector<int>>& grid) {
        int count=0;
        for(int i=0;i<grid.size();i++){
            count+=(grid[i].size()-binarySearch(grid[i],0,grid[i].size()));
        }
        return count;
    }
};
